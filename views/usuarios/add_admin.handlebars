<div id="content-wrapper" class="d-flex flex-column">

	<div class="container-login100">

		<div class="wrap-login100 ">

            {{#each erros}}
                <div class="alert alert-danger">
                    {{texto}}
                </div>
            {{else}}
            {{/each}}

            {{>_msg}}

            <div class="container-fluid">

                <!-- Formulário -->
                <form action="/usuarios/novoadmin" method="POST">

                    <h5 class="m-0 font-weight-bold text-primary text-center">
					    <i class="sidebar-brand-icon rotate-n-15 fas fa-hand-holding-usd"></i>
                        MESADINHA
                    </h5>
                    <br>
                
                    <h6 class="m-0 font-weight-bold text-primary text-center">Novo Usuário:</h6>
                    <br>
                    
                    <label for="nome" class="mb-2 text-gray-900">Nome:</label>
                        <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" required>
                        <br>
                    <label for="email" class="mb-2 text-gray-900">Email:</label>
                        <input type="text" id="email" name="email" placeholder="Email" class="form-control" required>
                        <br>
                    <label for="senha" class="mb-2 text-gray-900">Senha:</label>
                        <input type="password" name="senha" class="form-control" required>
                        <br>
                    <label for="senha2" class="mb-2 text-gray-900">Repita a sua senha:</label>
                        <input type="password" name="senha2" class="form-control" required>
                        <br><br>

                    <div class="text-center">
					    <button class="btn btn-success" type="submit">Criar usuário</button>
				    </div>
                </form>
            </div>
        </div>

    </div>
	
    <!-- Rolagem para o topo-->
    <a class="scroll-to-top rounded" href="#content-wrapper">
        <i class="fas fa-angle-up"></i>
    </a>

</div>
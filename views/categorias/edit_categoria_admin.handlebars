{{>_menulateral_admin}} 

<div id="content-wrapper" class="d-flex flex-column">

    <div id="content">

        {{>_navbar_admin}}

        {{#each erros}}
            <div class="alert alert-danger">
                {{texto}}
            </div>
        {{else}}
        {{/each}}

        <div class="container-fluid">
 
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Editar Categoria:</h4>
            </div>

            <!-- Formulário -->
            <form action="/categorias/editarcategoria_admin" method="POST">
                {{#each categoria}}

                    <br>
                <input type="hidden" name="id" value="{{id}}">
                <label for="descricao" class="mb-2 text-gray-900">Descrição:</label>
                    <input type="text" id="descricao" name="descricao" placeholder="Descricao" class="form-control" value="{{descricao}}" required>
                    <br><br>

                {{/each}}

                <button type="submit" class="btn btn-success">Editar categoria</button>
            </form>

        </div>

    </div>

    <!-- Rolagem para o topo-->
    <a class="scroll-to-top rounded" href="#content-wrapper">
        <i class="fas fa-angle-up"></i>
    </a>

    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2019</span>
            </div>
        </div>
    </footer>
</div>
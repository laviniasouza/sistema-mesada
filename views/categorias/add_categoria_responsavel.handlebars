{{>_menulateral_responsavel}} 

<div id="content-wrapper" class="d-flex flex-column">

    <div id="content">

        {{>_navbar_responsavel}}

        {{#each erros}}
            <div class="alert alert-danger">
                {{texto}}
            </div>
        {{else}}
        {{/each}}

        {{>_msg}}

        <div class="container-fluid">

            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Nova Categoria:</h4>
            </div>

            <!-- FormulÃ¡rio -->
            <form action="/categorias/novacategoria_responsavel" method="POST">
                    <br>
                <label for="descricao" class="mb-2 text-gray-900">Descricao:</label>
                    <input type="text" id="descricao" name="descricao" placeholder="Descricao" class="form-control" required>
                    <br><br>

                <button type="submit" class="btn btn-success">Criar categoria</button>
            </form>

        </div>

    </div>

    <!-- Rolagem para o topo-->
    <a class="scroll-to-top rounded" href="#content-wrapper">
        <i class="fas fa-angle-up"></i>
    </a>

    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2019</span>
            </div>
        </div>
    </footer>
</div>